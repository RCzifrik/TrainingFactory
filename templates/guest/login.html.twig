{% extends 'base.html.twig' %}
{% block body %}
    <div class="container-large my-5">
        <div class="row">
            <div class="col-4"></div>
            <div class="col-4 p-3 border border-2 border-dark rounded">
                <h3 class="text-center">Login</h3>
                <div class="d-flex justify-content-center">
                    <form method="post">
                        <label>Username</label>
                        <br>
                        <input type="text" name="_username" value="" placeholder="|II|I||II||I|II|I||I|II||II|I||II||I|II||II|I||I|II|I||II||I|II|" class="my-2">
                        <br>
                        <label>Password</label>
                        <br>
                        <input type="password" name="_password" value="" placeholder="********" class="my-2">
                        <input type="hidden" name="_target_path" value="{{ path('redirect') }}">
                        <br>
                        <a type="submit" class="d-flex justify-content-center my-3 mx-4"><button class="btn btn-primary w-75">Login</button></a>
                    </form>
                </div>
            </div>
            <div class="col-4"></div>
        </div>
    </div>
{% endblock %}